<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
   
    <title> <%= data.Name %> </title>
</head>
<body>
    <header>
        <div> <%= data.Name  %> ( <%=data.Symbol %> )</div>
        <div> <%= data.Exchange  %> | <%=data.Country %> </div>
    </header>
    <div class="container">

        <div class="description">
            <%= description%>
        </div>
        
        <div class="card-container">

            <div id="card1" class="card">
                <div class="item">
                    <span class="field-name"> Market Cap.:</span> USD <%= (data.MarketCapitalization/1000000000).toFixed(2) %> Bn
                </div>
                <div class="item">
                    <span class="field-name">Asset Type:</span> <%= data.AssetType  %>
                </div>
                <div class="item">
                    <span class="field-name"> Sector:</span> <%= data.Sector%>
                </div>
                <div class="item">
                    <span class="field-name">Industry:</span> <%= data.Industry%>
                </div>
                <div class="item">
                    <span class="field-name"> Employees:</span> <%= data.FullTimeEmployees%>
                </div>
                <div class="item">
                    <span class="field-name">Fiscal Year End:</span> <%= data.FiscalYearEnd%>
                </div>
                <div class="item">
                    <span class="field-name">Latest Quarter:</span> <%= data.LatestQuarter%>
                </div>
            </div>

            <div id="card2" class="card">
                <div class="item">
                    <span class="field-name"> PE Ratio:</span> <%= data.PERatio%>
                </div>
                <div class="item">
                    <span class="field-name">PEG Ratio:</span> <%= data.PEGRatio  %>
                </div>
                <div class="item">
                    <span class="field-name"> Book Value:</span> <%= data.BookValue%>
                </div>
                <div class="item">
                    <span class="field-name">Dividend Per Share:</span> <%= data.DividendPerShare%>
                </div>
                <div class="item">
                    <span class="field-name"> Dividend Yield:</span> <%= data.DividendYield%>
                </div>
                <div class="item">
                    <span class="field-name">EPS:</span> <%= data.EPS%>
                </div>
                <div class="item">
                    <span class="field-name">EBITDA:</span> <%= data.EBITDA%>
                </div>
                
            </div>

            <div id="card3" class="card">
                <div class="item">
                    <span class="field-name"> Beta:</span> <%= data.Beta%>
                </div>
                <div class="item">
                    <span class="field-name">52 Week High:</span> <%= data["52WeekHigh"]%>
                </div>
                <div class="item">
                    <span class="field-name"> 52 Week Low:</span> <%= data["52WeekLow"]%>
                </div>
                <div class="item">
                    <span class="field-name">50Days MA:</span> <%= data["50DayMovingAverage"]%>
                </div>
                <div class="item">
                    <span class="field-name">200Days MA:</span> <%= data["200DayMovingAverage"]%>
                </div>
                
            </div>

        </div>
        
    </div>
    <div id="daily-chart" data-dailygraphdata="<%= dailyGraphData%>">
        <div id="daily-chart-title">Daily chart</div>
        <div id="chart_div" style="width: 100%; height: 600px; text-align: center;"></div>
    </div>
</body>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script src="../util.js"></script>
</html>